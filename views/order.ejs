<%- include('partials/head') %>
<%- include('partials/nav') %>
<div class="container-fluid order-form">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form class="mt-5" action="/order" method="POST">
                <h1>Create a ticket for a computer</h1>  
              <div class="form-group mt-3">
                <label class="form-label" for="address">Address:</label>
                <input type="text" id="address" name="address" class="form-control form-control-lg" />
              </div>
              <div class="row mt-3">
                <div class="col-md-6 mb-4 form-group">
                  <label for="state">State:</label>
                  <select class="select form-control" name="state">
                    <% [ 'AL', 'AK', 'AS', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'DC', 'FM', 'FL', 'GA', 'GU', 'HI', 'ID', 'IL', 'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MH', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'MP', 'OH', 'OK', 'OR', 'PW', 'PA', 'PR', 'RI', 'SC', 'SD', 'TN', 'TX', 'UT', 'VT', 'VI', 'VA', 'WA', 'WV', 'WI', 'WY' ].forEach(state => { %>
                      <option <%= state %>><%= state %></option>
                  <% }) %>
                  </select>

                </div>
                <div class="col-md-6 mb-4 form-group">
                  <label for="city">City:</label>
                  <input type="text" name="city" class="form-control">
                </div>
              </div>

              <div class="form-outline mb-4">
                <label class="form-label" for="zip">Zip:</label>
                <input type="text" id="zip" class="form-control form-control-lg" name="zip" />
              </div>
              <div class="row">
                <div class="form-group col-6 mt-3">
                  <label for="spec">Specs:</label>
              <select id="spec" class="form-control" name="spec">
                  <% ['spec1','spec2','spec3', "spec4"].forEach(dept => { %>
                      <option <%= dept %>><%= dept %></option>
                  <% }) %>
                </select>
                </div>
                <div class="form-group col-6 mt-3">
                  <label for="phone" class="">Phone:</label>
                  <input type="tel" name="phone" class="form-control">
                </div>
              </div>
              <div class="form-group col-6 mt-3">
                  <p>CPU: <span class="specCPU"></span></p>
                  <p>RAM: <span class="specRam"></span></p>
                  <p>Estimated Cost: <span class="specCost"></span></p>
              </div>
              <div class="form-group">
                  <label for="exampleFormControlTextarea1">Notes for the build</label>
                  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="notes"></textarea>
              </div>
                  <button class="btn btn-primary mt-3">Submit the ticket</button>
              </form>
        </div>
    </div>
</div>
<!-- jquery -->
<script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>
  <script>
      $('.specCPU').html('intel 7700k')
      $('.specRam').html('16GB')
      $('.specCost').html('~$3000');
      $('#spec').on('change', ()=>{
        var spec = $('#spec').val();
        console.log(spec);
        switch (spec) {
          case 'spec1': 
            $('.specCPU').html('intel 7700k')
            $('.specRam').html('16GB')
            $('.specCost').html('~$3000');
            break
          case 'spec2':
            $('.specCPU').html('AMD 5900');
            $('.specRam').html('8GB')
            $('.specCost').html('~$599');
            break
          default:

        }
      })

  </script>
<%- include('partials/footer') %> 
